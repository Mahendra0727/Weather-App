    <script>
      const day = document.getElementById('day');
const getCurrentDay = () => {
  var weekday = new Array(7);
  weekday[0] = 'Sun';
  weekday[1] = 'Mon';
  weekday[2] = 'Tue';
  weekday[3] = 'Wed';
  weekday[4] = 'Thu';
  weekday[5] = 'Fri';
  weekday[6] = 'Sat';

  let currentTime = new Date();

  let days = weekday[currentTime.getDay()]; //

  day.innerText=days;
};
getCurrentDay();


const today_d=document.getElementById('todayDate')
 //fetching the time
  const getCurrentTime=()=>{
        let now =new Date();
      var date=now.getDate()
      
      //to get the month
      var months=['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sept','Oct','Nov','Dec']
      var month=months[now.getMonth()];
today_d.innerText=`${month} ${date}`
      
      }
      getCurrentTime();

